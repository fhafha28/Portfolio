<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/main.css">

    <title>TodoApp</title>
</head>

<body>


    <%- include('nav.html') %>
        <div class="container text-center mt-4">

            <div class="container">
                <div class="login">
                    <h4 class="container mt-4"><strong>Sign up</strong></h4>
                </div>
                <hr class="my-4">

                <form class="row g-3 needs-validation" action="/signingup" method="POST">
                    <div class="col-md-4">
                        <label for="validFirstname" class="form-label left">First name</label>
                        <input type="text" class="form-control form-check is-valid" id="validFirstname" value="Test" required>

                    </div>
                    <div class="col-md-4">
                        <label for="validLastname" class="form-label left">Last name</label>
                        <input type="text" class="form-control form-check is-valid" id="validLastname" value="Test" required>

                    </div>
                    <div class="col-md-8">
                        <label for="validUsername" class="form-label left">Username</label>
                        <div class="input-group">
                            <input type="text" class="form-control form-check" id="validUsername"
                                aria-describedby="inputGroupPrepend2" name="id" onchange="validationID" required>
                            <div class="valid-feedback left">
                                Looks good!
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <label for="validPW" class="form-label left">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control form-check" id="validPW" onchange="validationPw"
                                name="pw" aria-describedby="inputGroupPrepend2" required>
                                <div class="valid-feedback left">
                                    Looks good!
                                </div>
                        </div>
                        <div class="col-md-8 left">
                            <div class="condition">
                                Passwords must be at least 6 characters including capital letter.</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <label for="validPWconfirm" class="form-label left">Confirm password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="validPWconfirm"
                                aria-describedby="inputGroupPrepend2" required>
                        </div>
                        <div class="col-md-8 left">
                            <div class="valid-feedback">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="validCity" class="form-label left">City</label>
                        <input type="text" class="form-control" id="validCity" required>
                    </div>
                    <div class="col-md-3">
                        <label for="validCountry" class="form-label left">Country</label>
                        <select class="form-select" id="validCountry" required>
                            <option selected disabled value="">Choose...</option>
                            <option>A</option>
                            <option>B</option>
                            <option>C</option>
                            <option>D</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="validZip" class="form-label left">Zip</label>
                        <input type="text" class="form-control" id="validZip" required>
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                            <label class="form-check-label left" for="invalidCheck2">
                                Agree to terms and conditions
                            </label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-outline-secondary" type="submit">Submit form</button>
                    </div>
                </form>
            </div>




        </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script>

            (() => {
                'use strict'
                const forms = document.querySelectorAll('.needs-validation')
                Array.from(forms).forEach(form => {
                    form.addEventListener('submit', event => {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
            })()
    


            $('#validFirstname').on('focusout', function (e) {
                if (e.target.value.length >= 2) {
                    $('#validFirstname').addClass('is-valid')
                }
                if (e.target.value.length < 2) {
                    $('#validFirstname').removeClass('is-valid')
                    alert('First name should be more than 2 letters');
                }
            })
            $('#validLastname').on('focusout', function (e) {
                if (e.target.value.length >= 2) {
                    $('#validLastname').addClass('is-valid')
                }
                if (e.target.value.length < 2) {
                    $('#validLastname').removeClass('is-valid')
                    alert('Last name should be more than 2 letters');
                }
            })
            $('#validUsername').on('focusout', function (e) {
                if (/\W+/.test(e.target.value)) {
                    $('#validUsername').removeClass('is-valid');
                    alert('User name should not include space and special letters');
                }
                else
                if (e.target.value.length >= 4 && e.target.value.length <=12) {
                    $('#validUsername').addClass('is-valid')
                }
                if (e.target.value.length < 4) {
                    $('#validUsername').removeClass('is-valid')
                    alert('Username is too short');
                }
            })
           
            $('#validPW').on('focusout', function (e) {
                if (e.target.value.length < 6) {
                    e.preventDefault();
                    alert('Password must be more than 6 letters');
                }
                else
                    if (!/[A-Z]+/.test(e.target.value)) {
                        e.preventDefault();
                        alert('Password must include at least one capital letter');
                    }
                    else {
                        $('#validPW').addClass('is-valid')
                    }
            })

            $('#validPWconfirm').on('focusout', function (e) {
                if ($('#validPW').val()==e.currentTarget.value && e.currentTarget.value.length > 0 ){
                    $('#validPWconfirm').addClass('is-valid');
                }
                if (!($('#validPW').val()==e.currentTarget.value)) {
                    $('#validPWconfirm').removeClass('is-valid');
                    alert('Password does not match');
                }
            })

            $('#validCity').on('focusout', function (e) {
                if (!e.target.validity.valueMissing) {
                    $('#validCity').addClass('is-valid')
                }
                if (e.target.validity.valueMissing) {
                    $('#validCity').removeClass('is-valid')
                }
            })
            $('#validCountry').on('focusout', function (e) {
                if (!e.target.validity.valueMissing) {
                    $('#validCountry').addClass('is-valid')
                }
                if (e.target.validity.valueMissing) {
                    $('#validCountry').removeClass('is-valid')
                }
            })
            $('#validZip').on('focusout', function (e) {
                if (!e.target.validity.valueMissing) {
                    $('#validZip').addClass('is-valid')
                }
                if (e.target.validity.valueMissing) {
                    $('#validZip').removeClass('is-valid')
                }
            })
            $('#invalidCheck2').on('click', function (e) {
                if (e.target.checked) {
                    $('#invalidCheck2').addClass('is-valid')
                }
                if (!e.target.checked) {
                    $('#invalidCheck2').removeClass('is-valid')
                }
            })


            $('#send').on('click', function (e) {

                $.ajax({
                    type: "POST",
                    url: '/signingup',
                    data: {
                        id: `${$('#id').val()}`,
                        pw: `${$('#pw').val()}`
                    }
                }).done((result) => {
                    console.log('성공후실행됨');
                }).fail(function (xhr, textStatus, errorThrown) {
                    console.log(xhr, textStatus, errorThrown);
                });


            });



        </script>
</body>

</html>